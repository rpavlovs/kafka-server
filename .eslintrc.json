{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true

    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": [
            "error",
            {"allow": ["log", "info", "assert", "warn", "error"]}
        ],
        "no-unused-vars": [
            "error",
            {"vars": "local"}
        ]
    }
}